@model IEnumerable<MusicStore.Web.Models.Album.AlbumDetailsViewModel>

@{
    ViewBag.Title = "Albums";
}

<h2>AlbumsList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleasedYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SongsCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleasedYear)
        </td>
        <td>
            @Html.ActionLink(item.Author.Nickname, "Details", "Authors", new { id = item.Author.Id }, null)
        </td>
        <td>
            @Html.ActionLink(item.SongsCount.ToString(), "SongList", "Songs", new { songs = item.Songs }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
